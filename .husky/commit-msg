#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Validate commit message format
# Expected: type(scope): message
# Example: feat(auth): add login functionality

commit_msg=$(cat "$1")

# Regex for conventional commits
commit_regex='^(feat|fix|docs|style|refactor|perf|test|chore|build|ci|revert)(\(.+\))?: .{1,100}'

if ! echo "$commit_msg" | grep -qE "$commit_regex"; then
  echo ""
  echo "❌ Invalid commit message format!"
  echo ""
  echo "Your commit message should follow the Conventional Commits format:"
  echo ""
  echo "  type(scope): description"
  echo ""
  echo "Examples:"
  echo "  feat(auth): add login functionality"
  echo "  fix(billing): resolve Stripe webhook error"
  echo "  docs(readme): update installation instructions"
  echo ""
  echo "Valid types: feat, fix, docs, style, refactor, perf, test, chore, build, ci, revert"
  echo ""
  exit 1
fi

echo "✅ Commit message format valid"
