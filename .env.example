# ===========================================
# DEVORA SAAS V2 - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# -------------------------------------------
# DATABASE (MongoDB)
# -------------------------------------------
# Get your connection string from MongoDB Atlas
# https://mongodb.com/atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/devora?retryWrites=true&w=majority

# -------------------------------------------
# AI/LLM (OpenRouter)
# -------------------------------------------
# Get your API key from https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-key-here

# Default model (optional, defaults to openai/gpt-4o)
OPENROUTER_DEFAULT_MODEL=openai/gpt-4o

# -------------------------------------------
# PAYMENTS (Stripe)
# -------------------------------------------
# Get your keys from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Stripe Price IDs for subscription plans
# Create these in Stripe Dashboard > Products
STRIPE_PRICE_ID_MONTHLY=price_xxx_monthly
STRIPE_PRICE_ID_YEARLY=price_xxx_yearly

# -------------------------------------------
# GITHUB (Export Feature)
# -------------------------------------------
# Create a personal access token with 'repo' scope
# https://github.com/settings/tokens
GITHUB_TOKEN=ghp_your-github-token

# Optional: Default organization for repos
# GITHUB_DEFAULT_ORG=your-org

# -------------------------------------------
# VERCEL (Deployment Feature)
# -------------------------------------------
# Get your token from https://vercel.com/account/tokens
VERCEL_TOKEN=your-vercel-token

# Optional: Team ID for team deployments
# VERCEL_TEAM_ID=team_xxx

# -------------------------------------------
# APPLICATION
# -------------------------------------------
# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000

# Backend port (optional, defaults to 8000)
PORT=8000

# Environment: development | production
ENVIRONMENT=development

# -------------------------------------------
# SECURITY (Optional)
# -------------------------------------------
# JWT Secret for session tokens
# Generate with: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key

# Rate limiting (requests per minute per IP)
RATE_LIMIT_PER_MINUTE=60

# -------------------------------------------
# LOGGING (Optional)
# -------------------------------------------
# Log level: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO

# ===========================================
# FRONTEND ENVIRONMENT VARIABLES
# ===========================================
# These go in frontend/.env

