# ===========================================
# DEVORA SAAS V2 - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# Command: cp .env.example .env
#
# NEVER commit .env to version control!
# ===========================================

# -------------------------------------------
# DATABASE - MongoDB (Main Application)
# -------------------------------------------
MONGO_USER=devora_admin
MONGO_PASSWORD=CHANGE_ME_SECURE_PASSWORD_123
MONGO_DB=devora_db

# -------------------------------------------
# DATABASE - PostgreSQL (Memori Memory)
# -------------------------------------------
POSTGRES_USER=devora
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD_456
POSTGRES_DB=devora_memory

# Memori SDK will use this URL
# Format: postgresql://user:password@host:port/database
# For Docker: uses 'postgres' as host (service name)
# MEMORI_DATABASE_URL is auto-generated by docker-compose

# -------------------------------------------
# SECURITY - JWT Authentication
# -------------------------------------------
# Generate with: openssl rand -hex 32
SECRET_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_32

# Token expiration in minutes (default: 24 hours)
TOKEN_EXPIRE_MINUTES=1440

# -------------------------------------------
# PORTS (Optional - defaults shown)
# -------------------------------------------
BACKEND_PORT=4521
FRONTEND_PORT=4522

# -------------------------------------------
# URLs
# -------------------------------------------
# For local development:
FRONTEND_URL=http://localhost:4522
BACKEND_URL=http://localhost:4521

# For production (example):
# FRONTEND_URL=https://devora.fun
# BACKEND_URL=https://api.devora.fun

# -------------------------------------------
# AI/LLM - OpenRouter (Required for AI features)
# -------------------------------------------
# Get your API key from https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-key-here

# Default model (optional)
OPENROUTER_DEFAULT_MODEL=openai/gpt-4o

# -------------------------------------------
# PAYMENTS - Stripe (Optional)
# -------------------------------------------
# Get your keys from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Stripe Price IDs for subscription plans
STRIPE_PRICE_ID_MONTHLY=price_xxx_monthly
STRIPE_PRICE_ID_YEARLY=price_xxx_yearly

# -------------------------------------------
# GITHUB - Export Feature (Optional)
# -------------------------------------------
# Create a personal access token with 'repo' scope
# https://github.com/settings/tokens
GITHUB_TOKEN=ghp_your-github-token

# -------------------------------------------
# VERCEL - Deployment Feature (Optional)
# -------------------------------------------
# Get your token from https://vercel.com/account/tokens
VERCEL_TOKEN=your-vercel-token

# -------------------------------------------
# EMAIL - Resend (Optional)
# -------------------------------------------
# Get your API key from https://resend.com
RESEND_API_KEY=re_your-resend-key

# -------------------------------------------
# LOGGING (Optional)
# -------------------------------------------
LOG_LEVEL=INFO
